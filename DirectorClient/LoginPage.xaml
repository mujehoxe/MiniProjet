<Page x:Class="DirectorClient.LoginPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  mc:Ignorable="d" 
	  d:DesignHeight="450" d:DesignWidth="800"
	  Title="LoginPage">

	<Grid>
		<ListBox FontSize="14" HorizontalContentAlignment="Center" Background="{x:Null}" BorderBrush="#FF88ABF2" VerticalContentAlignment="Center" ScrollViewer.CanContentScroll="True" VerticalAlignment="Center" BorderThickness="0" >

			<StackPanel  Margin="20" Orientation="Horizontal">
				<TextBlock TextWrapping="Wrap" Text="Username" Width="65" FontFamily="Segoe UI Semibold"/>
				<TextBox TextWrapping="Wrap" Width="120" Margin="20,0,0,0" Background="{x:Null}" SelectionBrush="{x:Null}" BorderBrush="#88ABF2" BorderThickness="0,0,0,2" TextChanged="TextBox_TextChanged" Foreground="Black" />
			</StackPanel>

			<StackPanel  Margin="20" Orientation="Horizontal">
				<TextBlock TextWrapping="Wrap" Text="Password" Width="65" FontFamily="Segoe UI Semibold"/>
				<PasswordBox Width="120" Margin="20,0,0,0" BorderThickness="0,0,0,2" Background="{x:Null}" BorderBrush="#88ABF2" />
			</StackPanel>

			<Button Margin="20" Content="Login" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#88ABF2"/>

		</ListBox>
	</Grid>
</Page>
