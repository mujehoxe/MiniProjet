<UserControl x:Class="Agent.Assets.NotificationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agent.Assets"
             mc:Ignorable="d">
    
    <Grid Margin="10" Background="LightGray" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Padding="10,10,10,0" HorizontalAlignment="Center" FontSize="14">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="Username" Text="User" FontWeight="Bold"/>
                <TextBlock Text=" has published the "/>
                <TextBlock x:Name="Type" Text="Type" FontStyle="Oblique"/>
                <TextBlock Text=" under the name of "/>
            </StackPanel>
        </Label>
        <Label Grid.Row="1" Padding="10,0,10,10" HorizontalAlignment="Center" FontSize="14">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="Title" Text="Title" FontWeight="SemiBold"/>
            </StackPanel>
        </Label>
    </Grid>
</UserControl>
