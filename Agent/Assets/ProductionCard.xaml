<UserControl x:Class="Agent.Assets.ProductionCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agent.Assets"
             mc:Ignorable="d">
    <StackPanel Margin="10" Background="LightGray" VerticalAlignment="Center">
		<Label Padding="10,0" HorizontalAlignment="Center" Name="Type" FontSize="12" FontStyle="Oblique">Type</Label>
		<Label Padding="10" Name="Title" FontSize="16" FontWeight="Bold">Title</Label>
    </StackPanel>
</UserControl>
